      </category>
    </category>

    <category name="Text">
      <block type="text"></block>
      <block type="text_print">
        <value name="TEXT">
          <block type="text"></block>
        </value>
      </block>
      <block type="text_join"></block>
      <!-- <category name="More"> -->

