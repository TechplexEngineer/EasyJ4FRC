    <category name="Timing">
      <block type="delay">
        <value name="AMOUNT">
          <block type="math_number">
            <field name="NUM">1.5</field>
          </block>
        </value>
      </block>
      <block type="declare_timer"></block>
      <block type="start_timer"></block>
      <block type="stop_timer"></block>
      <block type="reset_timer"></block>
      <block type="us_counter"></block>
    </category>

